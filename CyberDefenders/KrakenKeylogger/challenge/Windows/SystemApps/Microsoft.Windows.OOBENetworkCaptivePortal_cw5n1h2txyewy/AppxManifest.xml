            <uap:SplashScreen Image="Assets\SplashScreen.png" />
      </uap:VisualElements>
      <Extensions>
        <uap:Extension Category="windows.protocol">
          <uap:Protocol Name="ms-oobenetwork" ReturnResults="optional">
              <uap:DisplayName>Captive Portal Flow</uap:DisplayName>
          </uap:Protocol>
